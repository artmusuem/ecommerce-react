#!/bin/sh

# Pre-commit hook: Runs type check and lint-staged
# Prevents broken code from being committed

echo "ğŸ” Running pre-commit checks..."

# Type check first (catches TS errors across entire codebase)
echo "ğŸ“ Type checking..."
npm run typecheck || {
  echo "âŒ Type check failed. Fix TypeScript errors before committing."
  exit 1
}

# Then lint-staged (only checks staged files)
echo "âœ¨ Linting staged files..."
npx lint-staged || {
  echo "âŒ Lint-staged failed. Fix linting errors before committing."
  exit 1
}

echo "âœ… Pre-commit checks passed!"
